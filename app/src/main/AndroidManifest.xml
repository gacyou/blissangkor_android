<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blissangkor_android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Base_NoAction">
        <activity android:name=".LoginPage"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--版面設定-->
        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/AppTheme.Base_NoAction"
            android:screenOrientation="portrait"/>

        <activity android:name=".Customer_Service"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base_NoAction"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".Customer_QApage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base_NoAction"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName=".Customer_Service"/>

        <activity android:name=".Customer_QALog"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base_NoAction"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName=".Customer_Service"/>

        <activity android:name=".utils.PageSix_AccountSetting"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base_NoAction"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName=".MainActivity"/>

    </application>

</manifest>